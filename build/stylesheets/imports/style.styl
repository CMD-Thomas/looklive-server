header, 
.header__img
  width 100%

.feed__img, .product
  max-width 100%

body
  font 14px Raleway, Helvetica, Arial, sans-serif
  background-color #f1f1f1
  margin 0

main
  padding 50px

nav
  background-color #252525
  padding .5em 1em
  overflow auto

.nav-items
  list-style none
  float right
  margin 0 auto

.appearance-left, .appearance-right, .feed-item, .nav__img, .nav__li
  float left

.nav__li
  height 100%
  line-height 30px
  margin-right 15px
  
.nav__link
  color #fff
  text-decoration none
  &:hover
    color #d84a4a

.nav__img
  height 1em
  position relative
  margin-right .3em
  top 6px
  display block

.clear
  clear both

header
  height 50vh
  max-height 56vw
  overflow hidden

.feed__link
  color #00b7ff

.feed-item
  width 300px
  height 600px
  margin .5em

.avatar
  width 2em
  height 2em
  margin-right .5em
  border-radius 50%

.feed__subtitle
  font-size 21px
  display -webkit-flex
  display -webkit-box
  display -ms-flexbox
  display flex
  -webkit-align-items center
  -webkit-box-align center
  -ms-flex-align center
  align-items center
  margin-bottom .5em

.feed__title
  margin-top 0
  font-size 21px

.appearance-left
  width 400px
  height 600px
  margin-right 2em
  position relative

.appearance-left__img
  width 100%

.product-indicator
  position absolute
  width 20px
  height 20px
  background-color #00b7ff
  border 2px solid #ddd
  border-radius 50%

.actual, .appearance-products__title, .similar
  padding-bottom .5em
  border-bottom 1px solid #ddd

.product-indicator-active
  background-color #b4da55

.appearance-products-inner
  width 400px
  position relative
  overflow hidden
  height 700px

.product
  width 450px
  position absolute
  -webkit-transform translateY(0)
  transform translateY(0)
  -webkit-transform translateX(100%)
  transform translateX(100%)
  -webkit-transition -webkit-transform .3s
  transition -webkit-transform .3s
  transition transform .3s
  transition transform .3s, -webkit-transform .3s
  &.product-active
    -webkit-transform translateX(0)
    transform translateX(0)

.appearance-products__title
  font-size 21px
  color #333

.actual, .similar
  display -webkit-box
  display -webkit-flex
  display -ms-flexbox
  display flex

.actual__image, .similar__image
  width 200px
  -webkit-flex-shrink 0
  -ms-flex-negative 0
  flex-shrink 0
  margin-right 1em

.similar__image
  width 150px

.actual__title, .similar__title
  margin .5em 0
  color #333
  font-size 16px
  border-bottom none

.actual__img, .similar__img
  width 100%

.actual__info h1, .similar__info h1
  font-size 21px
  margin 1.5em 0 .5em
  border-bottom none

.actual__info h2, .similar__info h2
  font-size 16px
  margin 1em 0

.icon-brands, .icon-home, .icon-latest, .icon-music, .icon-people, .icon-shows
  background-image url(../icons/icons.png)
  background-repeat no-repeat
  height 25px
  width 29px

.icon-latest
  background-position -86px
  width 24px
  height 26px

.icon-people
  background-position -110px
  width 28px

.icon-shows
  background-position -56px

.icon-music
  background-position -30px
  width 25px

.icon-home
  background-position -139px

.icon-brands
  width 31px
  height 25px

